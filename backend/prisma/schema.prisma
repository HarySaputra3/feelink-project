generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int     @id @default(autoincrement())
  email          String  @unique
  password       String
  name           String
  moods          Mood[]
}

model Mood {
  id        Int      @id @default(autoincrement())
  story     String
  emotions  Json
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
}

